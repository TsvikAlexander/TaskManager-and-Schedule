<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 m-3" id="tasks">
    {{#each tasks }}
        <div class="wrapper-card">
            <div class="card border border-primary shadow-0" style="background-color: {{ this.backgroundColor }}; color: {{ this.color }};">
                <div class="card-header">
                    <h5 class="card-title m-0">{{ this.title }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ this.description }}</p>
                </div>
                {{#if ../buttons }}
                    <div class="card-footer d-flex justify-content-between align-items-center gap-05">
                        <div class="date">{{dateFormat this.dateCreation "DD.MM.YYYY HH:mm"}}</div>
                        <div class="buttons d-flex flex-wrap justify-content-end align-items-center gap-05" data-task-id="{{ this._id }}">
                            {{#if ../completedTask }}
                                <button class="btn btn-outline-warning btn-floating btn-not-completed">
                                    <i class="fas fa-times fa-lg"></i>
                                </button>
                            {{ else }}
                                <button class="btn btn-outline-success btn-floating btn-completed">
                                    <i class="fas fa-check fa-lg"></i>
                                </button>
                            {{/if}}
                            <button class="btn btn-outline-primary btn-floating btn-edit"
                                    data-mdb-toggle="modal"
                                    data-mdb-target="#modal-edit-task"
                            >
                                <i class="fas fa-pencil-alt fa-lg"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-floating btn-delete"
                                    data-mdb-toggle="modal"
                                    data-mdb-target="#modal-delete-task"
                            >
                                <i class="far fa-trash-alt fa-lg"></i>
                            </button>
                            <button class="btn btn-secondary btn-floating btn-collapsible">
                                <i class="fas fa-brush fa-lg"></i>
                            </button>
                        </div>
                    </div>
                    <div class="collapsible px-4 py-2" data-task-id="{{ this._id }}">
                        <div class="d-flex align-items-center gap-05 mb-2">
                            Колір тексту:
                            <input type="color" value="{{ this.color }}" class="flex-grow-1 text-color" />
                        </div>
                        <div class="d-flex align-items-center gap-05">
                            Колір фону:
                            <input type="color" value="{{ this.backgroundColor }}" class="flex-grow-1 background-color" />
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    {{/each }}
</div>